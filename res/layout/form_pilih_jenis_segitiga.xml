<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_aplikasi_percobaan"
    tools:ignore="Deprecated" >

    <TextView
        android:id="@+id/TV_Judul_S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="6dp"
        android:text="@+string/TV_Judul_S"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/TV_SubJudul_S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="34dp"
        android:text="@+string/TV_SubJudul_S"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/Button_SegitigaSamaKaki_Pilihan"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:layout_x="13dp"
        android:layout_y="62dp"
        android:drawableRight="@drawable/segitiga_samakaki"
        android:text="@+string/Button_SegitigaSamaKaki_Pilihan" />

    <Button
        android:id="@+id/Button_SegitigaSamaSisi_Pilihan"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:layout_x="13dp"
        android:layout_y="141dp"
        android:drawableRight="@drawable/segitiga_samasisi"
        android:text="@+string/Button_SegitigaSamaSisi_Pilihan" />

    <Button
        android:id="@+id/Button_SegitigaSembarang_Pilihan"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:layout_x="13dp"
        android:layout_y="220dp"
        android:drawableRight="@drawable/segitiga_sembarang"
        android:text="@+string/Button_SegitigaSembarang_Pilihan" />

    <Button
        android:id="@+id/Button_SegitigaSikuSiku_Pilihan"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:layout_x="13dp"
        android:layout_y="300dp"
        android:drawableRight="@drawable/segitiga_sikusiku"
        android:text="@+string/Button_SegitigaSikuSiku_Pilihan" />

</AbsoluteLayout>