<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_aplikasi_percobaan"
    tools:ignore="Deprecated" >

    <TextView
        android:id="@+id/TV_Judul_Lingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="6dp"
        android:text="@+string/TV_Judul_Lingkaran"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/TV_PilihModeCari_Lingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="34dp"
        android:text="@+string/TV_PilihModeCari_Lingkaran"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/IV_Lingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="70dp"
        android:contentDescription="@+string/IV_Lingkaran"
        android:src="@drawable/lingkaran" />

    <Button
        android:id="@+id/Button_MC_Semua_Lingkaran"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_x="93dp"
        android:layout_y="70dp"
        android:background="@drawable/background_button_hitung"
        android:text="@+string/Button_MC_Semua_Lingkaran"
        android:textSize="12sp" />

    <Button
        android:id="@+id/Button_MC_HanyaJariJari_Lingkaran"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_x="93dp"
        android:layout_y="122dp"
        android:background="@drawable/background_button_hitung"
        android:text="@+string/Button_MC_HanyaJariJari_Lingkaran"
        android:textSize="12sp" />

</AbsoluteLayout>