<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_aplikasi_percobaan"
    tools:ignore="Deprecated" >

    <TextView
        android:id="@+id/TV_Judul_S_SamaSisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="6dp"
        android:text="@+string/TV_Judul_S_SamaSisi"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/TV_PilihModeCari_S_SamaSisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="9dp"
        android:layout_y="34dp"
        android:text="@+string/TV_PilihModeCari"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/Button_MC_Semua_S_SamaSisi"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="58dp"
        android:background="@drawable/background_button_hitung"
        android:textSize="12sp"
        android:text="@+string/Button_MC_Semua_S_SamaSisi" />

    <Button
        android:id="@+id/Button_MC_HanyaTinggi_S_SamaSisi"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="108dp"
        android:background="@drawable/background_button_hitung"
        android:textSize="12sp"
        android:text="@+string/Button_MC_HanyaTinggi_S_SamaSisi" />

</AbsoluteLayout>